<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#555555"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#000000"
        android:padding="5dp" >

        <TextView
            android:id="@+id/log_elapsed_lap_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/log_elapsed_lap_time_title"
            android:textColor="#FFFFFF"
            android:textSize="10.0dip" />

        <TextView
            android:id="@+id/log_elapsed_lap_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/log_elapsed_lap_time_title"
            android:textColor="#FFFFFF"
            android:textSize="55.0dip" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="#000000"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <TextView
            android:id="@+id/log_last_lap_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/log_last_lap_time_title"
            android:textColor="#FFFFFF"
            android:textSize="10.0dip" />

        <TextView
            android:id="@+id/log_last_lap_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/log_last_lap_time_title"
            android:textColor="#FFFFFF"
            android:textSize="65.0dip" />

        <TextView
            android:id="@+id/log_last_lap_time_delta_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/log_last_lap_time_value"
            android:textColor="#000000"
            android:textSize="40.0dip" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="#000000"
        android:padding="5dp">

        <TextView
            android:id="@+id/log_last_split_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/log_last_split_time_title"
            android:textColor="#FFFFFF"
            android:textSize="10.0dip" />

        <TextView
            android:id="@+id/log_last_split_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/log_last_split_time_title"
            android:textColor="#FFFFFF"
            android:textSize="50.0dip" />

        <TextView
            android:id="@+id/log_last_split_time_delta_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/log_last_split_time_value"
            android:textColor="#000000"
            android:textSize="35.0dip" />
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:baselineAligned="false">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="20"
            android:background="#000000"
            android:padding="5dp" >

            <TextView 
                android:id="@+id/log_lap_number_title"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:text="@string/log_lap_number_title"
                android:textSize="10.0dip"
                />
            <TextView 
                android:id="@+id/log_lap_number_value"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/log_lap_number_title"
                android:layout_alignParentRight="true"
                android:textSize="55.0dip"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:background="#000000"
            android:padding="5dp"
            android:layout_weight="25" >

            <TextView 
                android:id="@+id/log_elapsed_session_time_title"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:text="@string/log_elapsed_session_time_title"
                android:textSize="10.0dip"
                />

            <TextView
                android:id="@+id/log_elapsed_session_time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/log_elapsed_session_time_title"
                android:textColor="#FFFFFF"
                android:textSize="55.0dip" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
