<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="net.tracknalysis.tracklogger" android:versionCode="1" android:versionName="0.1-SNAPSHOT">
  
  <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="8" />
    
  <uses-permission android:name="android.permission.BLUETOOTH" />
  <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
  <uses-permission android:name="android.permission.WAKE_LOCK" />
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
  
  <permission  android:protectionLevel="normal" android:name="tracklogger.permission.session.export"
      android:description="@string/permission_session_export"/>

  <application android:icon="@drawable/icon" android:label="@string/app_name"
      android:name=".TrackLogger">
      
    <provider 
      android:name=".provider.TrackLoggerDataProvider"
      android:authorities="net.tracknalysis.TrackLogger.provider"
      android:exported="false">
      <grant-uri-permission android:pathPattern=".*" />
    </provider>
    
    <activity android:name=".activity.HomeActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity android:name=".activity.LogActivity" android:theme="@android:style/Theme.Black.NoTitleBar"
        android:launchMode="singleTask"/>
    <activity android:name=".activity.SessionListActivity"/>
    <activity android:name=".activity.SessionExportActivity"
      android:permission="tracklogger.permission.session.export">
      <intent-filter>
        <action android:name="net.tracknalysis.tracklogger.SESSION_EXPORT_CONFIG_ACTION" />
        <category android:name="android.intent.category.DEFAULT" />
        <data android:mimeType="vnd.android.cursor.item/net.tracknalysis.tracklogger.session" />
      </intent-filter>  
    </activity>
    <activity android:name=".activity.ConfigActivity"/>
    
    <service android:name=".dataprovider.android.DataProviderCoordinatorService" android:exported="false"/>
    <service android:name=".export.android.SessionExporterServiceImpl" android:exported="false">
       <intent-filter>
        <action android:name="net.tracknalysis.tracklogger.SESSION_EXPORT_ACTION" />
        <category android:name="android.intent.category.DEFAULT" />
        <data android:mimeType="vnd.android.cursor.item/net.tracknalysis.tracklogger.session" />
      </intent-filter>
    </service>
  </application>
  
  
</manifest>

